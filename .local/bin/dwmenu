#!/bin/bash

OPTIONS="\
 Firefox \n\
 Telegram \n\
 Deadbeef \n\
 RoxFiler \n\
 Terminal \n\
 Smart-Term \n\
 Root-Terminal \n\
 Leafpad \n\
 Pinta \n\
 Transmission \n\
 Private Browser\n\
 Alsamixer \n\
 Wallpaper \n\
 Connman \n\
 Python \n\
 Lxtask \n\
 Arandr \n\
 Record Desktop \n\
 Screenshot \n\
 About"

LAUNCHER="		\
dmenu 			\
-fn 'Sans-8' 		\
-y 19			\
-l 10 			\
-w 150 			\
"

option=`echo -e $OPTIONS | $LAUNCHER | awk '{print $1}' | tr -d '\r\n'`
if [ ${#option} -gt 0 ]
then
    case $option in
      Exit)
        eval $1
        ;;
             )
        xdotool key Super+2; firefox
        ;;
            )
        xdotool key Super+1; telegram-desktop 
        ;;
            )
        xdotool key Super+1; deadbeef
        ;;
            )
        rox
        ;;
            )
        terminal
        ;;
            )
        smart-terminal
        ;;
            )
        root-terminal
        ;;
            )
        editor
        ;;
            )
        xdotool key Super+6; pinta
        ;;
            )
        xdotool key Super+3; transmission-gtk
        ;;
             )
        firefox --private-window; xdotool key Super+2
        ;;
            )
        st-arc -e alsamixer
        ;;
            )
        wallpaper
        ;;
            )
        st-arc -e connmanctl
        ;;
            )
        python-shell
        ;;
            )
        lxtask
        ;;
            )
        arandr
        ;;
            )
        st-arc -e recdesk
        ;;
            )
        sleep 0.5; screenshot
        ;;
            )
        sysinfo
        ;;
      *)
        ;;
    esac
fi