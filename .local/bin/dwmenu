#!/bin/bash

OPTIONS="\
 Firefox \n\
 Telegram \n\
 Deadbeef \n\
 RoxFiler \n\
 Terminal \n\
 Smart-Term \n\
 Root-Terminal \n\
 Leafpad \n\
 Pinta \n\
 Transmission \n\
 Private Browser\n\
 Alsamixer \n\
 Wallpaper \n\
 Connman \n\
 Python \n\
 Lxtask \n\
 Arandr \n\
 Record Desktop \n\
 Screenshot \n\
 About"

LAUNCHER="			\
rofi                            \
-dmenu                          \
-location 1                     \
-lines 10                       \
-width 371                      \
-yoffset 19                     \
-columns 2                      \
-me-accept-entry MousePrimary   \
-me-select-entry MouseDPrimary  \
"

option=`echo -e $OPTIONS | $LAUNCHER | awk '{print $1}' | tr -d '\r\n'`
if [ ${#option} -gt 0 ]
then
    case $option in
      Exit)
        eval $1
        ;;
             )
        gotag t2; firefox
        ;;
            )
        gotag t1; telegram-desktop 
        ;;
            )
        gotag t1; deadbeef
        ;;
            )
        rox
        ;;
            )
        terminal
        ;;
            )
        smart-terminal
        ;;
            )
        root-terminal
        ;;
            )
        editor
        ;;
            )
        gotag t6; pinta
        ;;
            )
        gotag t3; transmission-gtk
        ;;
             )
        firefox --private-window; gotag t2
        ;;
            )
        st-arc -e alsamixer
        ;;
            )
        wallpaper
        ;;
            )
        st-arc -e connmanctl
        ;;
            )
        python-shell
        ;;
            )
        lxtask
        ;;
            )
        arandr
        ;;
            )
        st-arc -e recdesk
        ;;
            )
        sleep 0.5; screenshot
        ;;
            )
        sysinfo
        ;;
      *)
        ;;
    esac
fi