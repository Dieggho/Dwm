#!/bin/bash

OPTIONS="\
 Tile \n\
 Floating \n\
 Monocle"

LAUNCHER="                      \
rofi                            \
-dmenu                          \
-location 1                     \
-lines 3                        \
-width 10                       \
-yoffset 19                     \
-xoffset 335                    \
-columns 2                      \
-me-accept-entry MousePrimary   \
-me-select-entry MouseDPrimary  \
-p layouts                      \
"

option=`echo -e $OPTIONS | $LAUNCHER | awk '{print $1}' | tr -d '\r\n'`
if [ ${#option} -gt 0 ]
then
    case $option in
      Exit)
        eval $1
        ;;
             )
        xdotool key Super+t
        ;;
            )
        xdotool key Super+f
        ;;
            )
        xdotool key Super+m
        ;;
      *)
        ;;
    esac
fi