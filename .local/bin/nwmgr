#!/bin/bash

OPTIONS="\

 Connman Shell \n\
 Enable Wifi\n\
 Disable Wifi"

LAUNCHER="                      \
rofi                            \
-dmenu                          \
-location 1                     \
-lines 3                        \
-width 13                       \
-xoffset 1050                   \
-yoffset 19                     \
-columns 2                      \
-me-accept-entry MousePrimary   \
-me-select-entry MouseDPrimary  \
-p Network                      \
"

option=`echo -e $OPTIONS | $LAUNCHER | awk '{print $1}' | tr -d '\r\n'`
if [ ${#option} -gt 0 ]
then
    case $option in
      Exit)
        eval $1
        ;;
            )
        st-arc -e connmanctl
        ;;
            )
        connmanctl enable wifi; notify-send --icon=network-wireless 'Network Manager' 'Wifi Enabled'
        ;;
            )
        connmanctl disable wifi; notify-send --icon=network-wireless 'Network Manager' 'Wifi Disabled'
        ;;
      *)
        ;;
    esac
fi