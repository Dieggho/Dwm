#!/bin/bash

OPTIONS="\
 Choose Service \n\
 Connman Shell \n\
 Enable Wifi\n\
 Disable Wifi"

LAUNCHER="		\
dmenu 			\
-fn 'Sans-8' 		\
-y 19			\
-l 15 			\
-w 135 			\
-x 1100			\
"

option=`echo -e $OPTIONS | $LAUNCHER | awk '{print $1}' | tr -d '\r\n'`
if [ ${#option} -gt 0 ]
then
    case $option in
      Exit)
        eval $1
        ;;
             )
        sleep 0.5; notify-send --icon=network-wireless 'Network Manager' 'Scanning..'; sudo connman_dmenu
        ;;
            )
        st-arc -e connmanctl
        ;;
            )
        connmanctl enable wifi; notify-send --icon=network-wireless 'Network Manager' 'Wifi Enabled'
        ;;
            )
        connmanctl disable wifi; notify-send --icon=network-wireless 'Network Manager' 'Wifi Disabled'
        ;;
      *)
        ;;
    esac
fi