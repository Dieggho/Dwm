#!/bin/bash

OPTIONS="\
 Logoff\n\
  Suspend system\n\
 Reboot system\n\
 Power-off system"

LAUNCHER="		\
dmenu 			\
-fn 'Sans-8' 		\
-y 19			\
-l 10 			\
-w 150 			\
"

option=`echo -e $OPTIONS | $LAUNCHER | awk '{print $1}' | tr -d '\r\n'`
if [ ${#option} -gt 0 ]
then
    case $option in
      Exit)
        eval $1
        ;;
             )
        pkill dwm
        ;;
            )
        slock systemctl suspend -i
        ;;
            )
        systemctl reboot
        ;;
            )
        systemctl poweroff
        ;;
      *)
        ;;
    esac
fi