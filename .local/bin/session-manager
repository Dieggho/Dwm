#!/bin/bash

OPTIONS="\
 Logoff\n\
 Lock screen\n\
 Reboot\n\
 Power-off"

LAUNCHER="                      \
rofi                            \
-dmenu                          \
-location 1                     \
-lines 4                        \
-width 13                       \
-yoffset 19                     \
-columns 2                      \
-me-accept-entry MousePrimary   \
-me-select-entry MouseDPrimary  \
-p Session                      \
"

option=`echo -e $OPTIONS | $LAUNCHER | awk '{print $1}' | tr -d '\r\n'`
if [ ${#option} -gt 0 ]
then
    case $option in
      Exit)
        eval $1
        ;;
             )
        pkill dwm
        ;;
            )
	sleep 0.1
        slock `xset dpms force off`
        ;;
            )
        systemctl reboot
        ;;
            )
        systemctl poweroff
        ;;
      *)
        ;;
    esac
fi