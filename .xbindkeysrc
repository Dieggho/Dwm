##################################
#     Window resize and move     #
##################################

"wrm up"
	Mod5 + Up

"wrm down"
	Mod5 + Down

"wrm left"
	Mod5 + Left

"wrm right"
	Mod5 + Right

"wrm -h"
	Mod5 + Shift +  Up

"wrm +h"
	Mod5 + Shift +  Down

"wrm -w"
	Mod5 + Shift +  Left

"wrm +w"
	Mod5 + Shift +  Right

