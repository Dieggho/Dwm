"pkill xbindkeys; xbindkeys;notify-send 'Xbindkey reloaded'"
	Mod5 + BackSpace

"terminal"
	Mod5 + Return

"root-terminal"
	Mod5 + Shift + Return

"xdo kill"
        Mod5 + k

"smart-terminal"
	Control + Alt + t

